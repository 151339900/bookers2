<div>
  <%= flash[:notice] %>
</div>

<div class ="container">
  <div class ="row">
    <div class = "col-md-3">
      <div class ="container px-5 px-sm-0">
      <div class ="row">
      <div class ="col-ml-3">
      <h1>User info</h1>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
       <table class ="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%=@user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=@user.introduction %></th>
        </tr>
      </tbody>
    </table>
    </table>
    <div class="row">
      <%= link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
    </div>
    <div class="col-md-8 offset-md-1"></div>
  </div>
</div>

        <%= form_with model: @book do |f| %>

        <h1>New book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>opinion</h4>
        <%= f.text_area :body %>
        <!-- 追加部分 -->

        <%= f.submit 'Create Book' %>
      <% end %>
      </div>



    <div class ="col-md-8">
      <h1>Books</h1>
       <table class = "table table-hover table-inverse">
       <thead>
         <tr>
           <th>Title</th>
           <th>Opinion</th>
           <th></th>
         </tr>
       </thead>
       <tbody>
        <% @books.each do |book| %>
      <tr>
        <td>
        <% if @user.profile_image.attached? %>
        <%= link_to user_path(book.user) do %>
           <%= image_tag @user.profile_image, size: "100x100" %>
        <% end %>   
         <% else %>
           <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        </td>
        
        <td>
         <%= link_to book_path(book.user) do %>  
          <%= book.title %>
         <% end %>  
          </td>
          
        <td>
          <%= book.body %>
        </td>  
    
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
       </tr>
       <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>

